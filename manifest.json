{
  "manifest_version": 2,
  "name": "postMessage debugger",
  "description": "This extension prints messages sent with postMessage to the console",
  "version": "0.2.1",
  "browser_action": {
    "name": "Debug postMessages"
  },
  "content_scripts": [
    {
      "js": ["js/postMessage-debugger.js"],
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true
    }
  ]
}
